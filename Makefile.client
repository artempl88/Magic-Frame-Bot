	@echo "üìÅ –°–ø–∏—Å–æ–∫ –±—ç–∫–∞–ø–æ–≤:"
	@ls -la ./backups/*.sql.gz 2>/dev/null | awk '{print $$9, $$5/1024/1024 "MB", $$6, $$7, $$8}' || echo "–ë—ç–∫–∞–ø—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã"

